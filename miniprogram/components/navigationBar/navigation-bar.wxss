/* components/navigationBar/navigation-bar.wxss */
.nav-bar {
	position: fixed;
	width: 100%;
	top: 0;
	color: #fff;
	background: #fff;
}

.nav-bar .search {
	width: 40%;
	color: #333;
	font-size: 14px;
	background: #fff;
	position: absolute;
	border-radius: 50px;
	background: #ddd;
	padding-left: 14px;
}

.choose-city{
	position: absolute;
	left: 10px;
	bottom: 4px;
	line-height: 27px;
	height: 27px;
	color: #000;
}